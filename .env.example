# Environment
ENV=development

# NextAuth.js
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# GitHub OAuth — https://github.com/settings/developers
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Google OAuth — https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/financeflow

# Email — https://resend.com
RESEND_API_KEY=

# App base URL
BASE_URL=http://localhost:3000

# CoinGecko API key — free demo key from https://www.coingecko.com/en/api/pricing
# Greatly increases rate limits (recommended for production)
COINGECKO_API_KEY=

# Vercel Blob storage — https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=

# Algolia search — https://www.algolia.com/account/api-keys
NEXT_PUBLIC_ALGOLIA_APP_ID=
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=
